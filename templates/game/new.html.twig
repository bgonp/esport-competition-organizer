{% extends 'base.html.twig' %}

{% block title %}Crear juego | Round Breaker{% endblock %}

{% block content %}
<form method="post">
    <div class="col-md-8 col-xl-6 border-0 p-3 my-0 mx-auto">
        <h1 class="text-center">Crear Juego</h1>
        <div class="card border border-secondary p-3">
            <div class="form-group">
                <label for="inputName" class="sport-text-form">Nombre<span class="text-danger">*</span></label>
                <input type="text" name="name" id="inputName" class="form-control form-control-lg" required autofocus
                    value="{% if game %}{{ game.name }}{% endif %}">
            </div>
            <div class="form-group">
                <label for="inputDescription" class="mt-3 sport-text-form">Descripci√≥n</label>
                <input type="text" name="description" id="inputDescription" class="form-control form-control-lg"
                    value="{% if game %}{{ game.description }}{% endif %}">
            </div>
            <button id="submit-new" class="btn btn-lg btn-dark mt-3 break-text-large" type="submit">
                Crear!
            </button>
        </div>
    </div>
</form>
{% endblock %}