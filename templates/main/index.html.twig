{% extends 'base.html.twig' %}

{% block content %}
<div class="row m-3">
    <div id="main">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('game_new') }}">Create Game</a>
            <a href="{{ path('competition_new') }}">Create Competition</a>
        {% elseif app.user %}
            <a href="{{ path('competition_new') }}">Create Competition</a>
        {% endif %}
        <div id="Games">
            <br />Games
            {% for game in games %}
            <div><a href="{{ path('game_show', {id: game.id}) }}">{{ game.name }}</a>: {{ game.description }}</div>
            {% else %}
            <p>No games</p>
            {% endfor %}
        </div>
        <div id="Competitions">
            <br />Competitions
            {% for competition in competitions %}
            <div><a href="{{ path('competition_show', {id: competition.id}) }}">{{ competition.name }}</a>:
                {{ competition.description }} - {{ competition.game.name }}</div>
            {% else %}
            <p>No competitions</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}  