{% extends 'base.html.twig' %}

{% block title %}Recuperación de contraseña{% endblock %}

{% block content %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Recupera tu cuenta</h1>
    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <div>
        Introduce tu dirección de correo asociada y te enviaremos un e-mail para crear una nueva contraseña.
    </div>

    <button class="btn btn-dark sport-text">Enviar correo de recuperación</button>
    {{ form_end(requestForm) }}
{% endblock %}