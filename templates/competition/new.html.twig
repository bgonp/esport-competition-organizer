{% extends 'base.html.twig' %}

{% block content %}
{% if games %}
<form method="post">
    <div class="col-md-12 col-lg-8 col-xl-5 border-0 p-3 my-0 mx-auto">
        <h1 class="text-center">Crear Competición</h1>
        <div class="card form-group border border-secondary p-3">
            <label for="inputName" class="sport-text-form">Nombre</label>
            <input type="text" name="name" id="inputName"
                   class="form-control mb-3 form-control-lg" required>

            <label for="inputDescription" class="sport-text-form">Descripción</label>
            <input type="text" name="description" id="inputDescription"
                   class="form-control mb-3 form-control-lg">

            <label for="inputTeamNum" class="sport-text-form">Número de Equipos</label>
            <select id="inputTeamNum" name="teamNum" class="form-control col-12 mb-3 sport-text-form form-control-lg" required>
                <option value="">Escoge...</option>
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="8">8</option>
                <option value="16">16</option>
            </select>

            <label for="inputPlayersPerTeam" class="sport-text-form">Jugadores por Equipo</label>
            <select id="inputPlayersPerTeam" name="playersPerTeam" class="form-control col-12 mb-3 sport-text-form form-control-lg" required>
                <option value="">Escoge...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <label for="inputGame" class="sport-text-form">Juego</label>
            <select name="game" id="inputGame" class="form-control col-12 mb-3 sport-text-form form-control-lg" required>
                <option value="">Escoge...</option>
                {% for game in games %}
                    <option value="{{ game.id }}">{{ game.name }}</option>
                {% endfor %}
            </select>

            <label for="dateAndTime" class="sport-text-form mb-3">Fecha y Hora</label>
            <input class="form-control mb-3 form-control-lg" type="datetime-local" id="dateAndTime" name="heldAt" required>

            <button class="btn btn-lg btn-dark break-text-large mt-3" type="submit" id="submit-new">
                Crear!
            </button>
        </div>
    </div>
</form>
{% else %}
Can't make competitions if there are no games.
{% endif %}
{% endblock %}