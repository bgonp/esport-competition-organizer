{% extends 'base.html.twig' %}

{% block title %}Editar juego | Round Breaker{% endblock %}

{% block content %}
<form method="post">
    <div class="col-md-12 col-lg-8 col-xl-5 border-0 p-3" style="margin: auto;">
        <h1 class="text-center">Editar Juego</h1>
        <div class="card form-group border border-secondary p-3">
            <label for="inputName" class="sport-text-form">Nombre</label>
            <input type="text" value="{{ game.name }}" name="name" id="inputName" class="form-control form-control-lg">
            <label for="inputDescription" class="mt-3 sport-text-form">Description</label>
            <input type="text" value="{{ game.description }}" name="description" id="inputDescription" class="form-control form-control-lg">

            <button class="btn btn-lg btn-dark break-text-large mt-3" type="submit">
                Editar!
            </button>
        </div>
    </div>
</form>
{% endblock %}