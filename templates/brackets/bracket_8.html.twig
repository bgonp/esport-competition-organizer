<link rel="stylesheet" href="{{ asset('css/brackets.css') }}" />
<!--<i class="fas fa-angle-double-right"></i>-->
<div class="single bracket ml-3 mt-3">
	<div>
		<h1>{{ competition.name }}</h1>
	</div>
	<div class="bracket-container scrollable-x">
		<table class="bracket refresh" align="center">
			<thead>
				<tr>
					<th colspan="2">Cuartos</th>
					<th colspan="2">Semifinales</th>
					<th colspan="2">Final</th>
				</tr>
				<tr class="spacer"></tr>
			</thead>
			<tbody>
				<tr>
					<td class="match l1 o1 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[0], team: competition.rounds[0].teams[0] } %}
					</td>
					<td class="line bb"></td>
					<td class="line"></td>
					<td class="empty"></td>
					<td class="line"></td>
				</tr>
				<tr>
					<td class="match l1 o1 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[0], team: competition.rounds[0].teams[1] } %}
					</td>
					<td class="line br"></td>
					<td class="line"></td>
					<td class="empty"></td>
					<td class="line"></td>
				</tr>
				<tr>
					<td class="line"></td>
					<td class="line br"></td>
					<td class="match l2 o1 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[4], team: competition.rounds[4].teams[0] } %}
					</td>
					<td class="line bb"></td>
				</tr>
				<tr>
					<td class="empty"></td>
					<td class="line br"></td>
					<td class="match l2 o1 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[4], team: competition.rounds[4].teams[1] } %}
					</td>
					<td class="line br"></td>
				</tr>
				<tr>
					<td class="match l1 o2 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[1], team: competition.rounds[1].teams[0] } %}
					</td>
					<td class="line br bb"></td>
					<td class="line"></td>
					<td class="line br"></td>
				</tr>
				<tr>
					<td class="match l1 o2 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[1], team: competition.rounds[1].teams[1] } %}
					</td>
					<td class="line"></td>
					<td class="line"></td>
					<td class="line br"></td>
				</tr>
				<tr>
					<td class="empty"></td>
					<td class="line"></td>
					<td class="line"></td>
					<td class="line br"></td>
					<td class="match l3 o1 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[6], team: competition.rounds[6].teams[0] } %}
					</td>
				</tr>
				<tr>
					<td class="line"></td>
					<td class="line"></td>
					<td class="empty"></td>
					<td class="line br"></td>
					<td class="match l3 o1 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[6], team: competition.rounds[6].teams[1] } %}
					</td>
				</tr>
				<tr>
					<td class="match l1 o3 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[2], team: competition.rounds[2].teams[0] } %}
					</td>
					<td class="line bb"></td>
					<td class="line"></td>
					<td class="line br"></td>
					<td class="empty"></td>
				</tr>
				<tr>
					<td class="match l1 o3 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[2], team: competition.rounds[2].teams[1] } %}
					</td>
					<td class="line br"></td>
					<td class="line"></td>
					<td class="line br"></td>
					<td class="empty"></td>
				</tr>
				<tr>
					<td class="empty"></td>
					<td class="line br"></td>
					<td class="match l2 o2 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[5], team: competition.rounds[5].teams[0] } %}
					</td>
					<td class="line bb br"></td>
				</tr>
				<tr>
					<td class="empty"></td>
					<td class="line br"></td>
					<td class="match l2 o2 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[5], team: competition.rounds[5].teams[1] } %}
					</td>
					<td class="line"></td>

				</tr>
				<tr>
					<td class="match l1 o4 t1">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[3], team: competition.rounds[3].teams[0] } %}
					</td>
					<td class="line bb br"></td>
					<td class="line"></td>
					<td class="empty"></td>
					<td class="line"></td>

				</tr>
				<tr>
					<td class="match l1 o4 t2">
						{% include 'brackets/bracket_team.html.twig' with {round: competition.rounds[3], team: competition.rounds[3].teams[1] } %}
					</td>
					<td class="line"></td>
					<td class="line"></td>
					<td class="empty"></td>
					<td class="line"></td>

				</tr>
			</tbody>
		</table>
	</div>
	<a href="#" class="bracket-zoom"><i class="fas fa-expand-arrows-alt"></i></a>
</div>